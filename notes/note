#!/usr/bin/env perl6 

#                                    Perl6 Note Taker:
#
#   An extremely simple app that allows you to quickly 
#    and easily create notes and remove them if needed


sub showfiles($notename,$notedir) {
  # Sub to effectively DIR
    say dir "$notedir/";
}


sub MAIN($note) {

  # Notes Dir
    my $notedir  = "$*HOME/Documents/notes";  
  # This gets the date:
    my $dt = q:x/date +%Y-%m-%d/.trim; 
  # This gets the time: 
    my $time = q:x/date +%H:%M:%S/.trim;

  if $note[*-1] eq "add" {
  # Note Name
    my $notename =  prompt "Note Title: ";
  # Checking it all exists
    if not $notedir.IO ~~ :d {
      mkdir $notedir;  say "Created Folder ~/Documents/notes";
    } elsif "$notedir/$notename.note".IO ~~ :e {
      say "Uh-oh, a note of that name already exists";
      showfiles($notename,$notedir);
    }
  # Create the note
    my $note = open "$notedir/$notename.note", :w;
    $note.print("Created by Perl6 Note Taker; \nDate: $dt | Time: $time \n");
    $note.close;

    
  } elsif $note[0] eq "rm" {

    say "listing notes to rm one";
    
  } else {

    say "usage";

  }

}


