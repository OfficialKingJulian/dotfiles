# Reload functions
alt + shift + e
	"$XDG_CONFIG_HOME"/sxhkd/functions

# Start Rofi (dmenu)
super + Return
	/usr/bin/rofi -show run

# Start Term
alt + Return 
	/usr/bin/terminator

# Move Between Windows
alt + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Quit Current Window
alt + q
	bspc node --close

# Locker
super + l
	i3lock-fancy

# Brightness
{_,ctrl + ,super + }XF86MonBrightness{Down,Up}
	light {-U 5,-U 2,-U 10,-A 5,-A 2,-A 10}
