#!/usr/bin/env bash

printf "\n-----------------\nConfiguring Files\n-----------------\n"

# Install the Friendly Interactive SHell
    sudo apt install fish
    if [ -d "~/.config" ] 
    then
      mkdir ~/.config
      mkdir ~/.config/fish
    elif [ -d "~/.config/fish" ] 
    then
      mkdir ~/.config/fish
    fi
    sudo cp ./fish/config.fish ~/.config/fish/config.fish
    chsh -s /usr/bin/fish

# Simple Apps Setup
    sudo apt install unzip          # Unzip (duh)
    sudo apt install thefuck        # TheFuck (spellcheck)
    sudo apt install wget           # wget
    sudo apt install links          # browser
    sudo apt install make           # maker
    sudo apt install gcc            # compiler
    sudo apt install ranger         # ranger file expl
    sudo apt install nodejs         # NodeJs and NPM

# Vim setup, with Plug and the .vimrc file
    sudo apt install vim
    curl -fLo ~/.vim/autoload/plug.vim --create-dirs 
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    sudo cp .vimrc ~/.vimrc

# markdown-pdf
    sudo npm install -g markdown-pdf 

# Fun Stuff
    cd ~/
    git clone https://github.com/bartobri/no-more-secrets.git
    cd ./no-more-secrets
    make nms
    sudo make install
  
# Path Editing
    set -U fish_user_paths $PWD $fish_user_paths
    set -U fish_user_paths $PWD/tools $fish_user_paths
    
# cd ~/dotfiles
exec fish
