#!/bin/bash

  # INSTALL THE DOTFILES

        # Here's a list:
            # Fish 
            # VIM
            # neomutt
      # unzip       # ranger
      # lynx        # nodejs
      # perl6       # golang
      # wget        # cointop
      # make        # markdown-pdf 
      # gcc         # apache2
      # php         # certbot
      # python2+3   # mysql


echo ""
echo "Installing Dotfiles"
echo ""

# All the 'apt install's 
# and 'snap install's
  sudo apt  install   unzip ranger lynx \
                      nodejs perl6 golang \
                      wget make markdown-pdf \
                      gcc apache2 certbot mysql \
                      python3 python php \
                      neomutt vim fish 
  sudo snap install   cointop

# Set System GMT
  sudo timedatectl set-timezone Europe/London

  cd ${HOME}
# Creating Folder Structure
  if [ ! -d ".config" ]
  # .config Folder
    mkdir .config
    cd .config
  elif [ ! -d "fish" ]
  # FISh Folder
    mkdir fish
  elif [ ! -d "no-more-secrets" ]
  # NMS Folder
    git clone https://github.com/bartobri/no-more-secrets.git
    cd ./no-more-secrets
    make nms
    sudo make install
    cd ..
  elif [ ! -d "ranger" ]
  # Ranger Folder
    mkdir ranger
  elif [ ! -d "mutt" ]
  # Mutt Folder
    mkdir mutt
  else 
    echo "Done with folder .config"
  fi

# Moving Folders
  

# VIM Plug, for 'Goyo' mainly
  curl -fLo ${HOME}/.vim/autoload/plug.vim --create-dirs \ 
  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim


# End of Install: Auto Remove
  echo ""
  echo "Everything's done! Autoremove is now possible:"
  sudo apt autoremove
  cd ~/dotfiles
  exec fish

